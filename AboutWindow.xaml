<Window x:Class="PureGIS_Geo_QC.WPF.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="프로그램 정보" Height="600" Width="700"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize"
        Background="Transparent" WindowStartupLocation="CenterOwner">

    <Border BorderBrush="#FF555555" BorderThickness="1" Background="#FF2D2D30" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- 커스텀 타이틀바 -->
            <Grid Grid.Row="0" Background="#FF3F3F46" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                    <TextBlock Text="ℹ️" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="프로그램 정보" FontWeight="SemiBold" FontSize="14" Foreground="#FFCCCCCC"/>
                </StackPanel>

                <Button Grid.Column="1" Content="✕" 
                        Foreground="#FFF1F1F1" Background="Transparent" BorderThickness="0"
                        Padding="15,5" VerticalAlignment="Center"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE81123"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- 메인 컨텐츠 - TabControl 추가 -->
            <TabControl Grid.Row="1" Background="#FF2D2D30" BorderThickness="0" Margin="10">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Padding" Value="15,8"/>
                        <Setter Property="Foreground" Value="#FFAAAAAA"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="Border" Background="Transparent" BorderThickness="0,0,0,2" BorderBrush="Transparent" Margin="0,0,5,0">
                                        <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#FF3498DB"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="#FF3E3E42"/>
                                            <Setter Property="Foreground" Value="#FFDDDDDD"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!-- 프로그램 정보 탭 -->
                <TabItem Header="프로그램 정보">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 프로그램 아이콘 및 제목 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image Source="img/Geo_QC.ico" Width="48" Height="48" Margin="0,0,15,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="PureGIS Geo-QC" FontSize="24" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="지리정보 데이터형식 품질검사 도구" FontSize="14" Foreground="#FFAAAAAA" Margin="0,5,0,0"/>
                                    <TextBlock x:Name="LicenseStatusText" Text="라이선스: 미인증" FontSize="12" Foreground="#FFFF6B6B" Margin="0,3,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- 버전 정보 -->
                            <Border Grid.Row="2" Background="#FF3E3E42" CornerRadius="5" Padding="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="10"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="10"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="10"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="버전:" Foreground="#FFAAAAAA" FontWeight="Bold" Width="80"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="1.2.0" Foreground="White" FontWeight="SemiBold"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="빌드:" Foreground="#FFAAAAAA" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="2025.10.01" Foreground="White"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="개발자:" Foreground="#FFAAAAAA" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="PureGIS Team (CREW JIN,HONG)" Foreground="White"/>

                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="플랫폼:" Foreground="#FFAAAAAA" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="6" Grid.Column="1" Text=".NET Framework 4.8 / WPF / AutoCad Map3D 2023+" Foreground="White"/>
                                </Grid>
                            </Border>

                            <!-- 기능 설명 -->
                            <TextBlock Grid.Row="4" Text="주요 기능" FontSize="16" FontWeight="Bold" Foreground="White"/>

                            <Border Grid.Row="6" Background="#FF3E3E42" CornerRadius="5" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="• Shapefile 속성 구조 검증" Foreground="#FFDDDDDD" Margin="0,0,0,8"/>
                                    <TextBlock Text="• 기준 테이블과 파일 컬럼 비교 분석" Foreground="#FFDDDDDD" Margin="0,0,0,8"/>
                                    <TextBlock Text="• 데이터 타입 및 길이 검증" Foreground="#FFDDDDDD" Margin="0,0,0,8"/>
                                    <TextBlock Text="• 다중 파일 일괄 검사" Foreground="#FFDDDDDD" Margin="0,0,0,8"/>
                                    <TextBlock Text="• PDF, Word 형식 보고서 생성" Foreground="#FFDDDDDD" Margin="0,0,0,8"/>
                                    <TextBlock Text="• AutoCAD 플러그인 지원" Foreground="#FFDDDDDD"/>
                                </StackPanel>
                            </Border>                            
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <!-- 라이선스 약관 탭 -->
                <TabItem Header="라이선스 약관">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                        <Border Background="#FF3E3E42" CornerRadius="5" Padding="20">
                            <StackPanel>
                                <TextBlock Text="PureGIS Geo-QC 소프트웨어 라이선스 계약서" FontSize="16" FontWeight="Bold" Foreground="#FF3498DB" Margin="0,0,0,15"/>

                                <TextBlock Text="제1조 (라이선스 정의)" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                                <TextBlock Text="본 소프트웨어는 PureGIS Team이 개발한 지리정보 품질검사 도구로, 현재는 무료로 배포 되고 있지만, 추후 유료 라이선스를 통해서만 사용할 수 있습니다. 라이선스는 개인 또는 법인이 구매할 수 있으며, 구매한 라이선스는 계약에 명시된 기간 동안 유효합니다." 
                                           Foreground="#FFCCCCCC" TextWrapping="Wrap" Margin="0,0,0,15"/>

                                <TextBlock Text="제2조 (사용 권한 및 제한)" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                                <TextBlock Text="1. 라이선스 소유자는 구매한 라이선스 수만큼 소프트웨어를 동시에 사용할 수 있습니다.&#x0a;2. 한 개의 라이선스는 한 대의 컴퓨터에서만 동시 사용이 가능합니다.&#x0a;3. 라이선스의 무단 복사, 배포, 재판매는 엄격히 금지됩니다.&#x0a;4. 소프트웨어의 역공학, 분해, 수정은 금지됩니다." 
                                           Foreground="#FFCCCCCC" TextWrapping="Wrap" Margin="0,0,0,15"/>

                                <TextBlock Text="제3조 (네트워크 인증)" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                                <TextBlock Text="본 소프트웨어는 네트워크 기반 토큰 인증 시스템을 사용합니다. 소프트웨어 실행 시 인터넷 연결이 필요하며, 주기적으로 라이선스 서버와 통신하여 인증 상태를 확인합니다. 네트워크 연결이 장기간 차단되면 소프트웨어 사용이 제한될 수 있습니다." 
                                           Foreground="#FFCCCCCC" TextWrapping="Wrap" Margin="0,0,0,15"/>

                                <TextBlock Text="제4조 (라이선스 기간 및 갱신)" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                                <TextBlock Text="1. 라이선스는 구매 시 명시된 기간 동안 유효합니다.&#x0a;2. 라이선스 만료 전 갱신이 필요하며, 만료 후에는 소프트웨어 사용이 중단됩니다.&#x0a;3. 라이선스 갱신은 PureGIS Team 또는 공인 판매업체를 통해 가능합니다." 
                                           Foreground="#FFCCCCCC" TextWrapping="Wrap" Margin="0,0,0,15"/>

                                <TextBlock Text="제5조 (책임 제한)" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                                <TextBlock Text="1. 본 소프트웨어는 '있는 그대로' 제공되며, 특정 목적에 대한 적합성을 보장하지 않습니다.&#x0a;2. 소프트웨어 사용으로 인한 데이터 손실이나 업무 중단에 대해 개발사는 책임지지 않습니다.&#x0a;3. 사용자는 중요한 데이터의 백업을 권장합니다." 
                                           Foreground="#FFCCCCCC" TextWrapping="Wrap" Margin="0,0,0,15"/>

                                <TextBlock Text="제6조 (지원 및 업데이트)" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                                <TextBlock Text="1. 유효한 라이선스 소유자에게는 이메일을 통한 기술 지원을 제공합니다.&#x0a;2. 소프트웨어 업데이트는 라이선스 기간 내에 무료로 제공됩니다.&#x0a;3. 지원 요청은 support@jindigo.kr로 문의하시기 바랍니다." 
                                           Foreground="#FFCCCCCC" TextWrapping="Wrap" Margin="0,0,0,15"/>

                                <TextBlock Text="제7조 (계약 해지)" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                                <TextBlock Text="1. 라이선스 위반 시 개발사는 즉시 라이선스를 해지할 수 있습니다.&#x0a;2. 라이선스 해지 시 소프트웨어 사용을 즉시 중단해야 합니다.&#x0a;3. 해지된 라이선스에 대한 환불은 제공되지 않습니다." 
                                           Foreground="#FFCCCCCC" TextWrapping="Wrap" Margin="0,0,0,15"/>

                                <TextBlock Text="제8조 (개인정보 처리)" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                                <TextBlock Text="라이선스 인증 과정에서 수집되는 개인정보(컴퓨터 식별정보, IP주소 등)는 라이선스 관리 목적으로만 사용되며, 제3자에게 제공되지 않습니다." 
                                           Foreground="#FFCCCCCC" TextWrapping="Wrap" Margin="0,0,0,15"/>

                                <Border Background="#FF4A4A4A" CornerRadius="5" Padding="15" Margin="0,10,0,0">
                                    <StackPanel>
                                        <TextBlock Text="연락처 정보" FontWeight="Bold" Foreground="#FF3498DB" Margin="0,0,0,8"/>
                                        <TextBlock Text="개발사: PureGIS Team" Foreground="White"/>

                                        <TextBlock Foreground="White">
                                            웹사이트:
                                            <Hyperlink NavigateUri="https://www.jindigo.kr" RequestNavigate="Hyperlink_RequestNavigate" Foreground="#FF5DADE2">
                                                https://www.jindigo.kr
                                            </Hyperlink>
                                        </TextBlock>

                                        <TextBlock Foreground="White">
                                               지원 이메일:
                                               <Hyperlink NavigateUri="mailto:hpnation84@naver.com" RequestNavigate="Hyperlink_RequestNavigate" Foreground="#FF5DADE2">
                                                   hpnation84@naver.com
                                               </Hyperlink>
                                        </TextBlock>

                                        <TextBlock Foreground="White">
            개발자 개인 KAKAO TALK:
            <Hyperlink NavigateUri="https://open.kakao.com/o/smlP59id" RequestNavigate="Hyperlink_RequestNavigate" Foreground="#FF5DADE2">
                오픈채팅 바로가기
            </Hyperlink>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="본 약관에 동의하고 라이선스를 구매함으로써 위 조건들을 모두 수락하는 것으로 간주됩니다." 
                                           FontWeight="Bold" Foreground="#FFFF6B6B" TextWrapping="Wrap" Margin="0,20,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>