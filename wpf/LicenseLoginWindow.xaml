<Window x:Class="PureGIS_Geo_QC.WPF.LicenseLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PureGIS Geo-QC 라이선스 인증" 
        Height="500" Width="500"  SizeToContent="Height"   WindowStartupLocation="CenterScreen"     
        WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize"
        Background="Transparent" MouseDown="TitleBar_MouseDown">

<Window.Resources>
    <Style x:Key="TitleBarButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="#FFF1F1F1"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="15,5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF555555"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="CloseButtonStyle" BasedOn="{StaticResource TitleBarButtonStyle}" TargetType="Button">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFE81123"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</Window.Resources>

<Border BorderBrush="#FF555555" BorderThickness="1" Background="#FF2D2D30">
    <DockPanel>
        <Grid DockPanel.Dock="Top" Background="#FF3F3F46" Height="35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <Image Source="/wpf/Geo_QC.png" Width="16" Height="16" Margin="0,0,8,0"/>
                <TextBlock Text="PureGIS Geo-QC 라이선스 인증" FontWeight="SemiBold" FontSize="13" Foreground="#FFCCCCCC"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="✕" Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center">
                <Image Source="/wpf/Geo_QC.png" Width="64" Height="64" Margin="0,0,0,10"/>
                <TextBlock Text="PureGIS Geo-QC" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#FF3498DB"/>
                <TextBlock Text="라이선스 인증이 필요합니다" FontSize="14" HorizontalAlignment="Center" Foreground="#FFAAAAAA" Margin="0,5,0,0"/>
            </StackPanel>

            <TextBlock Grid.Row="2" Text="라이선스 키:" Foreground="White" FontWeight="Bold"/>
            <TextBox Grid.Row="4" x:Name="LicenseKeyTextBox" Height="35" Background="#FF3F3F46" Foreground="White" BorderBrush="#FF666666" Padding="10,8" FontSize="12" FontFamily="Consolas" Text="PUREGIS-DEMO-2025-ABCD1234"/>

            <TextBlock Grid.Row="6" x:Name="StatusMessage" Text="" Foreground="#FFFF6B6B" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="12"/>

            <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="인증하기" Width="100" Height="40" Margin="0,0,15,0" Background="#FF3498DB" Foreground="White" BorderThickness="0" FontWeight="Bold" Click="AuthenticateButton_Click" x:Name="AuthenticateButton"/>
                <Button Content="체험판" Width="100" Height="40" Margin="0,0,15,0" Background="#FF95A5A6" Foreground="White" BorderThickness="0" FontWeight="Bold" Click="TrialButton_Click" x:Name="TrialButton"/>
                <Button Content="종료" Width="100" Height="40" Background="#FF555555" Foreground="White" BorderThickness="0" FontWeight="Bold" Click="ExitButton_Click"/>
            </StackPanel>

            <Border Grid.Row="10" Background="#FF3E3E42" CornerRadius="5" Padding="15">
                <StackPanel>
                    <TextBlock Text="💡 소프트웨어 안내" Foreground="#FF3498DB" FontWeight="Bold" Margin="0,0,0,8"/>                        
                        <TextBlock Foreground="#FFCCCCCC" Margin="0,0,0,3">
                        <Run Text="• 웹사이트: "/>
                        <Hyperlink NavigateUri="https://www.jindigo.kr" 
                                   RequestNavigate="Hyperlink_RequestNavigate">
                            <Run Text="https://www.jindigo.kr"/>
                        </Hyperlink>
                        </TextBlock>
                        <TextBlock Text="• 이메일: hpnation84@naver.com" Foreground="#FFCCCCCC" Margin="0,0,0,3"/>
                        <TextBlock Foreground="#FFCCCCCC" Margin="0,0,0,3">
                        • 개발자 개인 KAKAO TALK:
                        <Hyperlink NavigateUri="https://open.kakao.com/o/smlP59id" RequestNavigate="Hyperlink_RequestNavigate" Foreground="#FF5DADE2">
                            오픈채팅 바로가기
                        </Hyperlink>
                        </TextBlock>
                        <TextBlock Text="• 체험판은 기능 제한이 있습니다" Foreground="#FFCCCCCC" Margin="0,0,0,3"/>
                    <TextBlock Text="• 인터넷 연결이 필요합니다" Foreground="#FFCCCCCC"/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Border>
</Window>