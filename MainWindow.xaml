<Window x:Class="PureGIS_Geo_QC_Standalone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PureGIS_Geo_QC.WPF"
        
        xmlns:models="clr-namespace:PureGIS_Geo_QC.Models"
        xmlns:exportModels="clr-namespace:PureGIS_Geo_QC.Exports.Models"
        
        KeyDown="MainWindow_KeyDown"
        mc:Ignorable="d"
        Title="PureGIS Geo-QC" Height="600" Width="1000"
        Icon="img/Geo_QC.ico"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip"
        Background="#FF2D2D30"
        Loaded="MainWindow_Loaded"
        Closing="Window_Closing">
    <Window.Resources>
        <local:BoolToCheckMarkConverter x:Key="BoolToCheckMarkConverter"/>
        <local:RemarksConverter x:Key="RemarksConverter"/>

        <!-- 타이틀바 버튼 스타일 -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#FFF1F1F1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButtonStyle" BasedOn="{StaticResource TitleBarButtonStyle}" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="0,1,1,1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFDDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF555555"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF777777"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF2D2D30"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,0,5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF4A6982"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 메뉴 스타일 -->
        <Style TargetType="{x:Type Menu}">
            <Setter Property="Background" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="#FFF1F1F1"/>
        </Style>

        <Style TargetType="{x:Type MenuItem}">
            <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
            <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFF1F1F1"/>
            <Setter Property="ScrollViewer.PanningMode" Value="Both"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type MenuItem}">
                        <Border x:Name="templateRoot" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <Grid Margin="-1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Name="Col0" MinWidth="22" Width="Auto" SharedSizeGroup="MenuItemIconColumnGroup"/>
                                    <ColumnDefinition x:Name="Col1" Width="13"/>
                                    <ColumnDefinition x:Name="Col2" Width="*"/>
                                    <ColumnDefinition x:Name="Col3" Width="30"/>
                                    <ColumnDefinition x:Name="Col4" Width="Auto" SharedSizeGroup="MenuItemIGTColumnGroup"/>
                                    <ColumnDefinition x:Name="Col5" Width="20"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter x:Name="Icon" ContentSource="Icon" HorizontalAlignment="Center" Height="16" Margin="3" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center" Width="16"/>
                                <ContentPresenter x:Name="HeaderHost" Grid.Column="2" ContentSource="Header" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                <TextBlock x:Name="InputGestureText" Grid.Column="4" Margin="{TemplateBinding Padding}" Opacity="0.7" Text="{TemplateBinding InputGestureText}"/>
                                <Path x:Name="RightArrow" Grid.Column="5" Data="M0,0L4,3.5 0,7z" Fill="{TemplateBinding Foreground}" Margin="4,0,0,0" VerticalAlignment="Center" Visibility="Collapsed"/>
                                <Popup x:Name="PART_Popup" AllowsTransparency="True" Focusable="False" IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}" PopupAnimation="{DynamicResource {x:Static SystemParameters.MenuPopupAnimationKey}}">
                                    <Border x:Name="SubmenuBorder" BorderBrush="#FF555555" BorderThickness="1" Background="#FF2D2D30" Padding="2">
                                        <ScrollViewer x:Name="SubmenuScrollViewer" Style="{DynamicResource {ComponentResourceKey ResourceId=MenuScrollViewer, TypeInTargetAssembly={x:Type FrameworkElement}}}">
                                            <ItemsPresenter x:Name="ItemsPresenter" KeyboardNavigation.DirectionalNavigation="Cycle" Grid.IsSharedSizeScope="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" KeyboardNavigation.TabNavigation="Cycle"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" TargetName="templateRoot" Value="#FF555555"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#FF888888"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Role" Value="TopLevelHeader"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter TargetName="PART_Popup" Property="Placement" Value="Bottom"/>
                                <Setter TargetName="Col0" Property="MinWidth" Value="0"/>
                                <Setter TargetName="Col1" Property="Width" Value="0"/>
                                <Setter TargetName="Col3" Property="Width" Value="0"/>
                                <Setter TargetName="Col4" Property="Width" Value="0"/>
                                <Setter TargetName="Col5" Property="Width" Value="0"/>
                                <Setter TargetName="Icon" Property="Visibility" Value="Collapsed"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Role" Value="TopLevelItem"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter TargetName="Col0" Property="MinWidth" Value="0"/>
                                <Setter TargetName="Col1" Property="Width" Value="0"/>
                                <Setter TargetName="Col3" Property="Width" Value="0"/>
                                <Setter TargetName="Col4" Property="Width" Value="0"/>
                                <Setter TargetName="Col5" Property="Width" Value="0"/>
                                <Setter TargetName="Icon" Property="Visibility" Value="Collapsed"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Role" Value="SubmenuHeader"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter TargetName="RightArrow" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_Popup" Property="Placement" Value="Right"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Role" Value="SubmenuItem"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Padding" Value="10,5"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Separator}">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Height" Value="1"/>
        </Style>

        <Style TargetType="{x:Type ListView}">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="{x:Type ListViewItem}">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Bd"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="Bd" Property="Background" Value="#FF4A6982"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="Bd" Property="Background" Value="#FF3E3E42"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#FF555555" BorderThickness="1">
        <DockPanel>
            <!-- 커스텀 타이틀바 -->
            <Grid DockPanel.Dock="Top" Background="#FF3F3F46" MouseDown="TitleBar_MouseDown" Height="35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 아이콘 및 제목 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <Image Source="img/Geo_QC.ico" Width="16" Height="16" Margin="0,0,8,0"/>
                    <TextBlock Text="PureGIS Geo-QC" FontWeight="SemiBold" FontSize="13" Foreground="#FFCCCCCC"/>
                </StackPanel>

                <!-- 타이틀바 버튼들 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="＿" Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click"/>
                    <Button Content="☐" Style="{StaticResource TitleBarButtonStyle}" Click="MaximizeButton_Click"/>
                    <Button Content="✕" Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- 메뉴바 -->
            <Menu DockPanel.Dock="Top" Background="#FF3F3F46" Foreground="#FFF1F1F1">
                <MenuItem Header="_파일(F)">
                    <MenuItem Header="_새 프로젝트(N)" InputGestureText="Ctrl+N" Click="NewProjectMenuItem_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="📄" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_프로젝트 불러오기(O)..." InputGestureText="Ctrl+O" Click="OpenProjectMenuItem_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="📁" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_프로젝트 저장(S)" InputGestureText="Ctrl+S" Click="SaveProjectMenuItem_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="💾" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="_종료(X)" InputGestureText="Alt+F4" Click="ExitMenuItem_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="🚪" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

                <MenuItem Header="_정보(I)">
                    <MenuItem Header="_프로그램 정보..." Click="AboutMenuItem_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="ℹ️" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>

            <!-- 메인 컨텐츠 -->
            <TabControl Name="MainTabControl" Background="#FF2D2D30" BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="Foreground" Value="#FFAAAAAA"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="Border" 
                            Background="Transparent" 
                            BorderThickness="0,0,0,2" 
                            BorderBrush="Transparent"
                            Margin="0,0,5,0">
                                        <ContentPresenter ContentSource="Header" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#FF3498DB"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="#FF3E3E42"/>
                                            <Setter Property="Foreground" Value="#FFDDDDDD"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="20" CornerRadius="10" Background="#FF555555" Margin="0,0,8,0">
                                <TextBlock Text="1" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="기준 정의" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="43.2"/>
                            <ColumnDefinition Width="81.9"/>
                            <ColumnDefinition Width="174.9"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FF3E3E42" CornerRadius="5" Margin="10,10,10,10" Grid.ColumnSpan="3">
                            <DockPanel>
                                <Border DockPanel.Dock="Top" Background="#FF4A4A4A" CornerRadius="3" Margin="10,10,10,0" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="프로젝트명:" Foreground="LightGray" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBox Grid.Column="1" Name="ProjectNameTextBox" Background="#FF2D2D30" Foreground="White" BorderBrush="Gray" VerticalContentAlignment="Center"/>
                                        <Button Grid.Column="2" Content="이름 저장" Padding="8,3" Name="SaveProjectNameButton" Click="SaveProjectNameButton_Click" Margin="10,0,0,0"/>
                                    </Grid>
                                </Border>

                                <TextBlock DockPanel.Dock="Top" Text="등록된 테이블" Foreground="White" FontSize="16" Margin="10" FontWeight="Bold"/>

                                <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="10,0,10,10">

                                    <TextBlock Text="분류 관리" Foreground="#FFAAAAAA" Margin="0,10,0,5"/>
                                    <Button Content="새 분류 추가" Name="AddCategoryButton" Click="AddCategoryButton_Click" Style="{StaticResource ModernButtonStyle}" Margin="0,0,0,5"/>
                                    <Button Content="선택 분류 수정" Name="EditCategoryButton" Click="EditCategoryButton_Click" Style="{StaticResource ModernButtonStyle}" Margin="0,0,0,5"/>
                                    <Button Content="선택 분류 삭제" Name="DeleteCategoryButton" Click="DeleteCategoryButton_Click" Style="{StaticResource ModernButtonStyle}" Background="#b03a2e" Foreground="White"/>

                                    <TextBlock Text="테이블 관리" Foreground="#FFAAAAAA" Margin="0,15,0,5"/>
                                    <Button Content="새 테이블 만들기" Name="NewTableButton" Click="NewTableButton_Click" Margin="0,0,0,5" 
            Style="{StaticResource ModernButtonStyle}"/>
                                    <Button Content="선택 테이블 삭제" Name="DeleteTableButton" Click="DeleteTableButton_Click" 
            Style="{StaticResource ModernButtonStyle}" Background="#b03a2e" Foreground="White"/>
                                </StackPanel>



                                <!-- 기존 ListBox 대신 TreeView 사용 -->
                                <TreeView Name="ProjectTreeView" Background="Transparent" Foreground="White" BorderThickness="0" 
                                        Margin="10,0,10,10" SelectedItemChanged="ProjectTreeView_SelectedItemChanged"
                                        AllowDrop="True"
                                        PreviewMouseLeftButtonDown="TreeView_PreviewMouseLeftButtonDown"
                                        MouseMove="TreeView_MouseMove"
                                        Drop="TreeView_Drop">
                                    <TreeView.ItemTemplate>
                                        <HierarchicalDataTemplate ItemsSource="{Binding Tables}">
                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                <TextBlock Text="📁" Margin="0,0,6,0" Foreground="#FF5DADE2" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding CategoryName}" 
                                                            FontWeight="Bold" 
                                                            Foreground="#FF5DADE2" 
                                                            FontSize="14" 
                                                            VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <HierarchicalDataTemplate.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="5,1">
                                                        <TextBlock Text="📄" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding TableName}" Foreground="White" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </HierarchicalDataTemplate.ItemTemplate>
                                        </HierarchicalDataTemplate>
                                    </TreeView.ItemTemplate>
                                </TreeView>
                            </DockPanel>
                        </Border>

                        <GridSplitter Grid.Column="3" Width="5" Background="#FF555555" HorizontalAlignment="Stretch"/>

                        <Border Grid.Column="4" Background="#FF3E3E42" CornerRadius="5" Margin="10,10,10,10">
                            <DockPanel>
                                <Border DockPanel.Dock="Top" Background="#FF4A4A4A" CornerRadius="3" Margin="10,10,10,5" Padding="10" Name="TableInfoPanel" Visibility="Collapsed">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="테이블 ID:" Foreground="LightGray" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="0" Grid.Column="1" Name="TableIdTextBox" Margin="0,0,15,0" Background="#FF2D2D30" Foreground="White" BorderBrush="Gray"/>
                                        <TextBlock Grid.Row="0" Grid.Column="2" Text="테이블명:" Foreground="LightGray" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="0" Grid.Column="3" Name="TableNameTextBox" Margin="0,0,10,0" Background="#FF2D2D30" Foreground="White" BorderBrush="Gray"/>
                                        <Button Grid.Row="0" Grid.Column="4" Content="저장" Padding="8,3" Name="SaveTableInfoButton" Click="SaveTableInfoButton_Click"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Name="SelectedTableHeader" Text="테이블을 선택하세요" 
                                                   Foreground="White" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <Border DockPanel.Dock="Top" Background="#FF2F4F4F" CornerRadius="3" Margin="10,5,10,5" Padding="8">
                                    <TextBlock Text="💡 Ctrl+V로 컬럼 데이터를 붙여넣으세요 (컬럼ID, 컬럼명, 타입, 길이 순서)" 
                                               Foreground="LightBlue" FontSize="12" TextWrapping="Wrap"/>
                                </Border>

                                <DataGrid Name="StandardGrid" AutoGenerateColumns="False" 
                                          CanUserAddRows="False" Background="#FF2D2D30" Foreground="White" BorderBrush="Gray" RowHeight="28"                                          
                                          IsReadOnly="False"
                                          SelectionUnit="Cell"
                                          SelectionMode="Extended">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="컬럼 ID" Binding="{Binding ColumnId}" Width="*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Padding" Value="8,0,0,0"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="컬럼명" Binding="{Binding ColumnName}" Width="2*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Padding" Value="8,0,0,0"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="타입" Binding="{Binding Type}" Width="*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Padding" Value="8,0,0,0"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="길이" Binding="{Binding Length}" Width="*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Padding" Value="8,0,0,0"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridCheckBoxColumn Header="NOT NULL" Binding="{Binding IsNotNull}" Width="80"/>
                                        <DataGridTextColumn Header="코드명" Binding="{Binding CodeName}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Border>
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="20" CornerRadius="10" Background="#FF555555" Margin="0,0,8,0">
                                <TextBlock Text="2" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="코드 관리" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#FF3E3E42" CornerRadius="5" Margin="10">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="코드 그룹" Foreground="White" FontSize="16" Margin="10" FontWeight="Bold"/>
                                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                                    <Button Name="AddCodeSetButton" Content="추가" Width="80" Click="AddCodeSetButton_Click" Style="{StaticResource ModernButtonStyle}"/>
                                    <Button Name="EditCodeSetButton" Content="수정" Width="80" Margin="10,0" Click="EditCodeSetButton_Click" Style="{StaticResource ModernButtonStyle}"/>
                                    <Button Name="DeleteCodeSetButton" Content="삭제" Width="80" Click="DeleteCodeSetButton_Click" Style="{StaticResource ModernButtonStyle}" Background="#b03a2e" Foreground="White"/>
                                </StackPanel>
                                <ListView Name="CodeSetListView" Margin="10,0,10,10" SelectionChanged="CodeSetListView_SelectionChanged" DisplayMemberPath="CodeName"/>
                            </DockPanel>
                        </Border>

                        <GridSplitter Grid.Column="1" Width="5" Background="#FF555555" HorizontalAlignment="Stretch"/>

                        <Border Grid.Column="2" Background="#FF3E3E42" CornerRadius="5" Margin="10">
                            <DockPanel>
                                <TextBlock Name="SelectedCodeSetHeader" DockPanel.Dock="Top" Text="코드 그룹을 선택하세요" Foreground="White" FontSize="16" Margin="10" FontWeight="Bold"/>
                                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                                    <Button Name="AddCodeButton" Content="추가" Width="80" Click="AddCodeButton_Click" Style="{StaticResource ModernButtonStyle}"/>
                                    <Button Name="EditCodeButton" Content="수정" Width="80" Margin="10,0" Click="EditCodeButton_Click" Style="{StaticResource ModernButtonStyle}"/>
                                    <Button Name="DeleteCodeButton" Content="삭제" Width="80" Click="DeleteCodeButton_Click" Style="{StaticResource ModernButtonStyle}" Background="#b03a2e" Foreground="White"/>
                                </StackPanel>

                                <DataGrid Name="CodeDataGrid" Margin="10,0,10,10" AutoGenerateColumns="False" 
                                          CanUserAddRows="False" Background="#FF2D2D30" IsReadOnly="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="코드" Binding="{Binding Code}" Width="*"/>
                                        <DataGridTextColumn Header="코드명(한글)" Binding="{Binding Description}" Width="2*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Border>
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="20" CornerRadius="10" Background="#FF555555" Margin="0,0,8,0">
                                <TextBlock Text="3" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="파일 검사" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Border Background="#FF3E3E42" CornerRadius="5" Margin="10">
                            <DockPanel>
                                <Border DockPanel.Dock="Top" Background="#FF4A4A4A" CornerRadius="3" Margin="10" Padding="15">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Border Grid.Row="0" Background="#FF4A4A4A" CornerRadius="3" Margin="10,10,10,10" Padding="15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Button Grid.Column="0" Content="1. SHP/DBF 파일 열기" Name="OpenFileButton" Click="OpenFileButton_Click" 
                                                        Style="{StaticResource ModernButtonStyle}" Height="40" Margin="-1,0,5,0"/>

                                                <Button Grid.Column="1" Content="❌ 선택 파일 제거" Name="RemoveFileButton" Click="RemoveFileButton_Click" 
                                                        Style="{StaticResource ModernButtonStyle}" Background="#b03a2e" Foreground="White" Height="40" Margin="5,0,0,0"/>

                                                <TextBlock Grid.Column="2" Text="검사할 파일 목록" Foreground="Gray" 
                                                           VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" FontStyle="Italic"/>
                                                <Button Grid.Column="3" Content="2. 전체 검사 실행" Name="ValidateButton" Click="ValidateButton_Click" FontSize="14" 
                                                        Style="{StaticResource ModernButtonStyle}" Background="#FF3498DB" Foreground="White"/>
                                            </Grid>
                                        </Border>

                                        <ListBox Grid.Row="1" Name="FileListBox" Margin="10,0,10,10" Background="#FF2D2D30" 
                                                 Foreground="White" BorderBrush="#FF555555" SelectionChanged="FileListBox_SelectionChanged"/>
                                    </Grid>
                                </Border>

                                <DataGrid Name="LoadedFileGrid" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" 
                                          Background="#FF2D2D30" Foreground="White" BorderBrush="Gray" Margin="10,0,10,10">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="컬럼명" Binding="{Binding ColumnName}" Width="2*"/>
                                        <DataGridTextColumn Header="타입" Binding="{Binding DataType.Name}" Width="*"/>
                                        <DataGridTextColumn Header="길이" Binding="{Binding MaxLength}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="20" CornerRadius="10" Background="#FF555555" Margin="0,0,8,0">
                                <TextBlock Text="4" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="결과 리포트" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 내보내기 버튼 영역 -->
                        <Border Grid.Row="0" Background="#FF4A4A4A" CornerRadius="3" Margin="10,10,10,5" Padding="15">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                    <TextBlock Text="PDF 내보내기:" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <Button Name="ExportPdfSharpButton" Content="📄 PDF로 내보내기" 
                            Style="{StaticResource ModernButtonStyle}" Background="#FFDC143C" Foreground="White" 
                            Click="ExportPdfSharpButton_Click"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="Word 내보내기:" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <Button Name="ExportToWordButton" Content="📝 Word로 내보내기" 
                            Style="{StaticResource ModernButtonStyle}" Background="#FF3498DB" Foreground="White" 
                            Click="ExportToWordButton_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- 메인 컨텐츠 영역: 왼쪽 파일목록, 오른쪽 결과그리드 -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="350"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 왼쪽: 파일 목록 TreeView -->
                            <Border Grid.Column="0" Background="#FF3E3E42" CornerRadius="5" Margin="10,5,0,10">
                                <DockPanel>
                                    <TextBlock DockPanel.Dock="Top" Text="검사 결과 파일 목록" Foreground="White" FontSize="14" Margin="10,10,10,5" FontWeight="Bold"/>
                                    <TreeView Name="ResultTreeView" Background="#FF2D2D30" BorderBrush="Gray" Foreground="White" 
                              Margin="10,0,10,10" SelectedItemChanged="ResultTreeView_SelectedItemChanged">
                                        <TreeView.Resources>
                                            <HierarchicalDataTemplate DataType="{x:Type exportModels:ReportData}" ItemsSource="{Binding ValidationResults}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="📁" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding FileName}" FontWeight="Bold" Foreground="White"/>
                                                    <TextBlock Text=" (" Foreground="Gray" Margin="5,0,0,0"/>
                                                    <TextBlock Text="정상:" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding NormalCount}" Foreground="LightGreen" Margin="3,0,0,0"/>
                                                    <TextBlock Text="/" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding TotalCount}" Foreground="Gray"/>
                                                    <TextBlock Text=" | " Foreground="Gray"/>
                                                    <TextBlock Text="{Binding SuccessRate}" FontWeight="SemiBold" Foreground="White"/>
                                                    <TextBlock Text=")" Foreground="Gray"/>
                                                </StackPanel>
                                            </HierarchicalDataTemplate>
                                            <DataTemplate DataType="{x:Type models:ColumnValidationResult}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="🔍" Margin="15,0,5,0"/>
                                                    <TextBlock Text="{Binding Std_ColumnId}" Foreground="#FFAAAAAA" Width="60"/>
                                                    <TextBlock Text="{Binding Std_ColumnName}" Foreground="White" Width="80"/>
                                                    <TextBlock Text="{Binding Status}" FontWeight="Bold" Width="40">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="정상">
                                                                        <Setter Property="Foreground" Value="LightGreen"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="오류">
                                                                        <Setter Property="Foreground" Value="LightCoral"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </TreeView.Resources>
                                    </TreeView>
                                </DockPanel>
                            </Border>

                            <GridSplitter Grid.Column="1" Width="5" Background="#FF555555" HorizontalAlignment="Stretch"/>

                            <!-- 오른쪽: 상세 결과 DataGrid -->
                            <Border Grid.Column="2" Background="#FF3E3E42" CornerRadius="5" Margin="0,5,10,10">
                                <DockPanel>
                                    <TextBlock DockPanel.Dock="Top" Name="SelectedFileHeader" Text="파일을 선택하여 상세 결과를 확인하세요" 
                               Foreground="White" FontSize="14" Margin="10,10,10,5" FontWeight="Bold"/>

                                    <DataGrid Name="ResultGrid" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" 
                              Background="#FF2D2D30" Foreground="White" BorderBrush="Gray" Margin="10,0,10,10" RowHeight="30">
                                        <DataGrid.Columns>
                                            <!-- 상태 -->
                                            <DataGridTextColumn Header="상태" Binding="{Binding Status}" Width="60">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="Text" Value="정상">
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                            <Trigger Property="Text" Value="오류">
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                                <DataGridTextColumn.CellStyle>
                                                    <Style TargetType="DataGridCell">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="정상">
                                                                <Setter Property="Background" Value="#FF4CAF50"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="오류">
                                                                <Setter Property="Background" Value="#FFF44336"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.CellStyle>
                                            </DataGridTextColumn>

                                            <!-- 기준 정보 -->
                                            <DataGridTextColumn Header="기준 컬럼ID" Binding="{Binding Std_ColumnId}" Width="100">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="기준 컬럼명" Binding="{Binding Std_ColumnName}" Width="140">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="Margin" Value="8,0,0,0"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="기준 타입" Binding="{Binding Std_Type}" Width="80">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="기준 길이" Binding="{Binding Std_Length}" Width="80">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <!-- 파일 정보 -->
                                            <DataGridTextColumn Header="찾은 필드명" Binding="{Binding Found_FieldName}" Width="100">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="파일 타입" Binding="{Binding Cur_Type}" Width="80">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsTypeCorrect}" Value="False">
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsTypeCorrect}" Value="True">
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                                <DataGridTextColumn.CellStyle>
                                                    <Style TargetType="DataGridCell">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsTypeCorrect}" Value="False">
                                                                <Setter Property="Background" Value="#FFF44336"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsTypeCorrect}" Value="True">
                                                                <Setter Property="Background" Value="#FF00BCD4"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.CellStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn Header="파일 길이" Binding="{Binding Cur_Length}" Width="80">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsLengthCorrect}" Value="False">
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsLengthCorrect}" Value="True">
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                                <DataGridTextColumn.CellStyle>
                                                    <Style TargetType="DataGridCell">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsLengthCorrect}" Value="False">
                                                                <Setter Property="Background" Value="#FFF44336"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsLengthCorrect}" Value="True">
                                                                <Setter Property="Background" Value="#FF00BCD4"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.CellStyle>
                                            </DataGridTextColumn>

                                            <!-- 결과 체크마크 -->
                                            <DataGridTextColumn Header="필드존재" Binding="{Binding IsFieldFound, Converter={StaticResource BoolToCheckMarkConverter}}" Width="70">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="FontSize" Value="16"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsFieldFound}" Value="True">
                                                                <Setter Property="Foreground" Value="LightGreen"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsFieldFound}" Value="False">
                                                                <Setter Property="Foreground" Value="LightCoral"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn Header="타입일치" Binding="{Binding IsTypeCorrect, Converter={StaticResource BoolToCheckMarkConverter}}" Width="70">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="FontSize" Value="16"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsTypeCorrect}" Value="True">
                                                                <Setter Property="Foreground" Value="LightGreen"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsTypeCorrect}" Value="False">
                                                                <Setter Property="Foreground" Value="LightCoral"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn Header="길이일치" Binding="{Binding IsLengthCorrect, Converter={StaticResource BoolToCheckMarkConverter}}" Width="70">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="FontSize" Value="16"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsLengthCorrect}" Value="True">
                                                                <Setter Property="Foreground" Value="LightGreen"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsLengthCorrect}" Value="False">
                                                                <Setter Property="Foreground" Value="LightCoral"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="NULL허용" Binding="{Binding IsNotNullCorrect, Converter={StaticResource BoolToCheckMarkConverter}}" Width="70">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="FontSize" Value="16"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsNotNullCorrect}" Value="True">
                                                                <Setter Property="Foreground" Value="LightGreen"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsNotNullCorrect}" Value="False">
                                                                <Setter Property="Foreground" Value="LightCoral"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn Header="코드일치" Binding="{Binding IsCodeCorrect, Converter={StaticResource BoolToCheckMarkConverter}}" Width="70">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="FontSize" Value="16"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsCodeCorrect}" Value="True">
                                                                <Setter Property="Foreground" Value="LightGreen"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsCodeCorrect}" Value="False">
                                                                <Setter Property="Foreground" Value="LightCoral"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn Header="NULL오류" Binding="{Binding NotNullErrorCount}" Width="80">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="FontSize" Value="14"/>
                                                        <Setter Property="Foreground" Value="LightCoral"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding NotNullErrorCount}" Value="0">
                                                                <Setter Property="Foreground" Value="LightGreen"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn Header="코드오류" Binding="{Binding CodeErrorCount}" Width="80">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="FontSize" Value="14"/>
                                                        <Setter Property="Foreground" Value="LightCoral"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CodeErrorCount}" Value="0">
                                                                <Setter Property="Foreground" Value="LightGreen"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>                                        
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Border>
</Window>
