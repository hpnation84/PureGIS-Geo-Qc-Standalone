<Window x:Class="PureGIS_Geo_QC.WPF.ErrorListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="오류 상세 목록" Height="400" Width="500"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">

    <Window.Resources>
        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="0,1,1,1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Border Background="#FF2D2D30" CornerRadius="10" BorderBrush="#FF555555" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#FF3E3E42" CornerRadius="10,10,0,0"
                    MouseDown="TitleBar_MouseDown">
                <TextBlock x:Name="TitleText" Text="오류 상세 목록" Foreground="White" 
                           FontSize="14" FontWeight="Bold" Margin="10,5"/>
            </Border>

            <ListView Grid.Row="1" x:Name="ErrorListView" Margin="10"
                      Background="#FF3F3F46" Foreground="White" BorderBrush="#FF666666">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="객체 식별자" Width="200" DisplayMemberBinding="{Binding Identifier}" />
                        <GridViewColumn Header="오류 내용" Width="250" DisplayMemberBinding="{Binding ErrorDescription}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Grid.Row="2" Content="닫기" Width="80" Margin="10" 
                    HorizontalAlignment="Right" Click="CloseButton_Click"
                    Background="#FF555555" Foreground="White" BorderThickness="0" Padding="5"/>
        </Grid>
    </Border>
</Window>