<Window x:Class="PureGIS_Geo_QC.WPF.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CustomMessageBox" Height="200" Width="400"
        
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">

    <Border Background="#FF2D2D30" CornerRadius="10" BorderBrush="#FF555555" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#FF3E3E42" CornerRadius="10,10,0,0"
                    MouseDown="TitleBar_MouseDown">
                <TextBlock x:Name="TitleText" Text="타이틀" Foreground="White" 
                           FontSize="14" FontWeight="Bold" Margin="10,5"/>
            </Border>

            <TextBlock Grid.Row="1" x:Name="MessageText" Text="메시지 내용이 여기에 표시됩니다."
                       Foreground="White" FontSize="14" TextWrapping="Wrap"
                       VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button x:Name="OkButton" Content="확인" Width="80" Margin="5" Click="OkButton_Click"
                        Background="#FF555555" Foreground="White" BorderThickness="0" Padding="5"/>
                <Button x:Name="CancelButton" Content="취소" Width="80" Margin="5" Click="CancelButton_Click"
                        Background="#FF555555" Foreground="White" BorderThickness="0" Padding="5" Visibility="Collapsed"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>