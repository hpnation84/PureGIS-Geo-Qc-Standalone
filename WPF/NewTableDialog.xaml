<Window x:Class="PureGIS_Geo_QC.WPF.NewTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="새 테이블 생성" Height="220" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Border Background="#FF2D2D30" CornerRadius="10" BorderBrush="#FF555555" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="새 테이블 생성" Foreground="White"
                       FontSize="14" FontWeight="Bold" Margin="15,10"/>

            <StackPanel Grid.Row="1" Margin="15,0">
                <TextBlock Text="테이블 ID:" Foreground="White" Margin="0,5"/>
                <TextBox x:Name="TableIdTextBox" Background="#FF3F3F46" Foreground="White" BorderBrush="#FF666666" Padding="8" FontSize="14"/>
                <TextBlock Text="테이블명:" Foreground="White" Margin="0,10,0,5"/>
                <TextBox x:Name="TableNameTextBox" Background="#FF3F3F46" Foreground="White" BorderBrush="#FF666666" Padding="8" FontSize="14"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="확인" Width="80" Margin="5" IsDefault="True" Click="OkButton_Click"
                         Background="#FF3498DB" Foreground="White" BorderThickness="0" Padding="5"/>
                <Button Content="취소" Width="80" Margin="5" IsCancel="True" Click="CancelButton_Click"
                        Background="#FF555555" Foreground="White" BorderThickness="0" Padding="5"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>