<Window x:Class="PureGIS_Geo_QC.WPF.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="입력" Height="180" Width="350"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Border Background="#FF2D2D30" CornerRadius="10" BorderBrush="#FF555555" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleText" Grid.Row="0" Text="타이틀" Foreground="White" 
                       FontSize="14" FontWeight="Bold" Margin="15,10"/>

            <TextBox x:Name="InputTextBox" Grid.Row="1" Margin="15,0"
                     Background="#FF3F3F46" Foreground="White" BorderBrush="#FF666666"
                     Padding="8" FontSize="14" VerticalContentAlignment="Center"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="확인" Width="80" Margin="5" IsDefault="True" Click="OkButton_Click"
                        Background="#FF3498DB" Foreground="White" BorderThickness="0" Padding="5"/>
                <Button Content="취소" Width="80" Margin="5" IsCancel="True" Click="CancelButton_Click"
                        Background="#FF555555" Foreground="White" BorderThickness="0" Padding="5"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>